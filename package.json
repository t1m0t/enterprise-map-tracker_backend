{
	"name": "backoffice",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "Suppavisor",
	"scripts": {
		"build": "NODE_ENV=production bun run scripts/build.mts",
		"format": "biome format",
		"start": "tsc && bun .",
		"start:dev": "tsc-watch --onSuccess \"bun ./src/main.ts\"",
		"start:debug": "tsc-watch --onSuccess \"bun ./src/main.ts\"",
		"start:prod": "NODE_ENV=production bun dist/main.js",
		"lint": "biome lint",
		"check": "biome check",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:cov": "bun test --coverage",
		"test:debug": "bun --inspect-brk --runInBand",
		"test:e2e": "bun test ./test/app.e2e-spec.ts",
		"db:migrate": "bun run db/migrate.ts",
		"db:rollback": "bun run db/migrate.ts rollback"
	},
	"dependencies": {
		"@biomejs/biome": "^2.3.8",
		"@fastify/view": "^11.1.1",
		"@nestjs/axios": "^4.0.1",
		"@nestjs/cache-manager": "^3.0.1",
		"@nestjs/common": "^11.1.9",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.9",
		"@nestjs/mapped-types": "^2.1.0",
		"@nestjs/platform-express": "^11.1.9",
		"@nestjs/platform-fastify": "^11.1.9",
		"@nestjs/schedule": "^6.1.0",
		"axios": "^1.13.2",
		"better-auth": "^1.4.7",
		"dotenv": "^17.2.3",
		"fs-extra": "^11.3.2",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.3",
		"@eslint/js": "^9.39.2",
		"@nestjs/cli": "^11.0.14",
		"@nestjs/schematics": "^11.0.9",
		"@nestjs/testing": "^11.1.9",
		"@types/bun": "^1.3.4",
		"@types/jest": "^30.0.0",
		"@types/supertest": "^6.0.3",
		"cross-var": "^1.1.0",
		"globals": "^16.5.0",
		"jest": "^30.2.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.6",
		"ts-loader": "^9.5.4",
		"ts-node": "^10.9.2",
		"tsc-watch": "^7.2.0",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.49.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
